<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
    <changeSet author="authorGonzalez" id="changelog-1.0">
        <createTable tableName="USER">
            <column name="ID" type="INT">
                <constraints nullable="true" primaryKey="true" unique="false"/>
            </column>
            <column name="NAME" type="VARCHAR(50)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="LAST_NAME" type="VARCHAR(50)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="AGE" type="INT">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
            <column name="ID_ROL" type="INT">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="authorGonzalez" id="changelog-1.1">
        <createTable tableName="ROL">
            <column name="ID" type="INT">
                <constraints nullable="true" primaryKey="true" unique="false"/>
            </column>
            <column name="ROL" type="VARCHAR(20)">
                <constraints nullable="true" primaryKey="false" unique="true"/>
            </column>
            <column name="ID_PERMITS" type="INT">
                <constraints nullable="true" primaryKey="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>
    
    <changeSet author="authorGonzalez" id="changelog-1.2">
        <createTable tableName="PERMITS">
            <column name="ID" type="INT">
                <constraints nullable="true" primaryKey="true" unique="false"/>
            </column>
            <column name="PERMITS" type="VARCHAR(15)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="authorGonzalez" id="changelog-1.3">
        <createTable tableName="ADDRESS">
            <column name="ID" type="INT">
                <constraints nullable="true" primaryKey="true" unique="false"/>
            </column>
            <column name="STREET" type="VARCHAR(50)">
                <constraints nullable="true" primaryKey="false" unique="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="authorGonzalez" id="changelog-1.4">
    <addForeignKeyConstraint baseColumnNames="ID_ROL"
            baseTableName="USER"
            constraintName="fk_user_rol"
            referencedColumnNames="ID"
            referencedTableName="ROL"/>
    </changeSet>

    <changeSet author="authorGonzalez" id="changelog-1.5">
    <addForeignKeyConstraint baseColumnNames="ID_PERMITS"
            baseTableName="ROL"
            constraintName="FK_ROL_PERMITS"
            referencedColumnNames="ID"
            referencedTableName="PERMITS"/>
    </changeSet>
</databaseChangeLog>